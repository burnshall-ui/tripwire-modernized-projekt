# Tripwire Environment Configuration
# Copy this file to .env and configure for your environment

# Application
APP_NAME=Tripwire
APP_ENV=development
APP_DEBUG=true
APP_VERSION=2.0

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tripwire
DB_USER=tripwire
DB_PASS=your_password_here
DB_CHARSET=utf8mb4

# EVE Database
EVE_DB_HOST=localhost
EVE_DB_PORT=3306
EVE_DB_NAME=eve_dump
EVE_DB_USER=tripwire
EVE_DB_PASS=your_password_here

# Redis Cache & Sessions
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_PREFIX=tripwire:
REDIS_SESSION_TTL=86400

# Session Configuration
SESSION_LIFETIME=86400
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict

# WebSocket Server
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8080
WEBSOCKET_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_DIR=logs
LOG_ROTATION_DAYS=7

# Security
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1
CORS_ENABLED=false
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60

# EVE Online SSO (Optional)
EVE_CLIENT_ID=
EVE_SECRET_KEY=
EVE_CALLBACK_URL=
