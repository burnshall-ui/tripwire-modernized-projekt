# ================================
# Tripwire Environment Configuration
# ================================

# Copy this file to .env and adjust values

# ================================
# Application Settings
# ================================
APP_NAME=Tripwire
APP_VERSION=1.11.22
APP_ENV=production  # development | production

# ================================
# Database Configuration
# ================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=tripwire
DB_USER=tripwire
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# EVE Database
EVE_DB_HOST=mysql
EVE_DB_NAME=eve_carnyx

# ================================
# EVE Online API
# ================================
EVE_SSO_CLIENT_ID=your_client_id
EVE_SSO_CLIENT_SECRET=your_client_secret
EVE_SSO_REDIRECT_URL=https://yourdomain.com/index.php?mode=sso

# EVE ESI User Agent
USER_AGENT=Tripwire Server - admin@yourdomain.com

# ================================
# Security Settings
# ================================
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict
SESSION_LIFETIME=3600

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=10
API_RATE_LIMIT_WINDOW=3600

# ================================
# CDN & Assets
# ================================
CDN_DOMAIN=your-cdn-domain.com
CDN_ENABLED=true

# ================================
# Monitoring & Logging
# ================================
LOG_LEVEL=error  # debug | info | warning | error
LOG_FILE=/var/log/tripwire/app.log

# ================================
# Performance Settings
# ================================
CACHE_ENABLED=true
CACHE_DRIVER=file  # file | redis | memcached
CACHE_TTL=3600

# ================================
# Feature Flags
# ================================
FEATURE_API_ENABLED=true
FEATURE_TUTORIALS_ENABLED=true
FEATURE_ACTIVITY_GRAPH_ENABLED=true

# ================================
# Development Settings
# ================================
DEBUG=false
DISPLAY_ERRORS=false
XDEBUG_ENABLED=false
XDEBUG_REMOTE_HOST=host.docker.internal
