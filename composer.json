{
    "name": "tripwire/tripwire",
    "description": "EVE Online Wormhole Mapping Tool",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Tripwire Team",
            "email": "admin@tripwire.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "cboden/ratchet": "^0.4.4",
        "react/event-loop": "^1.3",
        "react/socket": "^1.12",
        "predis/predis": "^2.0",
        "monolog/monolog": "^3.0",
        "symfony/cache": "^6.0",
        "symfony/http-client": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Tripwire\\": "src/",
            "Tripwire\\Controllers\\": "controllers/",
            "Tripwire\\Services\\": "services/",
            "Tripwire\\Models\\": "models/",
            "Tripwire\\Views\\": "views/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tripwire\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 src/",
        "lint-fix": "phpcbf --standard=PSR12 src/",
        "analyze": "phpstan analyse src/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
